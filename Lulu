    // Build grid
    const grid = document.getElementById('grid');

    function renderGrid(list){
      grid.innerHTML = '';
      list.forEach(d => {
        const el = document.createElement('button');
        el.className = 'card';
        el.setAttribute('data-day', d.day);
        el.innerHTML = `
          <div>
            <div class="num">${d.day}</div>
            <div class="sub">${d.title}</div>
          </div>
          <div class="ribbon">Ouvrir</div>
        `;
        el.addEventListener('click', ()=>openModal(d));
        grid.appendChild(el);
      });
    }

    function openModal(d){
      document.getElementById('modal-day').textContent = d.day;
      document.getElementById('modal-date').textContent = d.title;
      const items = document.getElementById('modal-items');
      items.innerHTML = '';
      d.items.forEach((it, idx)=>{
        const div = document.createElement('div');
        div.className = 'item';
        div.innerHTML = `<h3>${idx+1}. ${it.t}</h3><p>${it.d}</p>`;
        items.appendChild(div);
      });
      document.getElementById('backdrop').style.display = 'flex';
      // accessibility focus
      document.getElementById('close').focus();
    }

    document.getElementById('close').addEventListener('click', ()=>{
      document.getElementById('backdrop').style.display = 'none';
    });

    // copy a short message to clipboard
    document.getElementById('copy').addEventListener('click', ()=>{
      const day = document.getElementById('modal-day').textContent;
      const title = document.getElementById('modal-date').textContent;
      const txt = `${title} — Voici une petite surprise pour toi 💌`;
      navigator.clipboard.writeText(txt).then(()=>{
        alert('Message rapide copié dans le presse-papiers !');
      }, ()=>{alert('Impossible de copier — copie manuellement.')});
    });

    // Shuffle order (useful si tu veux mélanger les cases)
    document.getElementById('shuffle').addEventListener('click', ()=>{
      const shuffled = [...days].sort(()=>Math.random()-0.5);
      renderGrid(shuffled);
    });

    // Download current HTML: creates a blob of the page's source and downloads it.
    document.getElementById('download').addEventListener('click', ()=>{
      const doctype = '<!doctype html>\n';
      const html = document.documentElement.outerHTML;
      const blob = new Blob([doctype + html], {type:'text/html'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'calendrier-anniversaire.html';
      document.body.appendChild(a); a.click(); a.remove();
      URL.revokeObjectURL(url);
    });

    // initial render
    renderGrid(days);
  </script>

  
